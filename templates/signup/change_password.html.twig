{% extends 'layout.html.twig' %}


{% block meta %}
  {% include('partials/meta.html.twig') with {'meta_title' :'Reset your password',
  'meta_keywords' : 'reset password',
  'meta_description' : "Reset password page of #{site_name}"  
} %}
{% endblock %}

{% block content %}

<div class="container">
<div class="row">
<div class="col col-lg-12">
<div class="col col-lg-12" style="padding-top:20px;padding-bottom:40px;">
<h1>Reset Your Password</h1>
<hr>
<p>Enter your new password below.</p>
{% if formError == 1 %}
<div class="alert alert-danger" role="alert">
We found errors in your sign up details. Please correct the errors below and submit again.
</div>
{% endif %}
<br /><br />
<!-- -->
{{ form_start(form, {attr: {novalidate: 'novalidate'}}) }}
<div class="row">
<div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-6 col-md-offset-3 col-lg-4 col-lg-offset-4" style="margin-left:auto;margin-right:auto;">

<div class="form-group">
New Password*
 {{ form_widget(form.password.first,  {'attr': {'class': 'form-control input-lg'}}) }}
 <div class="form-error">
        {{ form_errors(form.password.first) }}
 </div>
</div>
<div class="form-group">
Confirm New Password*
 {{ form_widget(form.password.second,  {'attr': {'class': 'form-control input-lg'}}) }}
 <div class="form-error">
        {{ form_errors(form.password.second) }}
 </div>
</div>
 {{ form_widget(form.submit,  {'attr': {'class': 'btn btn-primary  btn-lg btn-block', 'value':'Submit'}}) }}
<br>
</div>
</div>
{{ form_end(form) }}


<!-- -->

</div>
     
    </div>


</div>
</div>
{% endblock %}