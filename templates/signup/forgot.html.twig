{% extends 'layout.html.twig' %}

{% block meta %}
  {% include('partials/meta.html.twig') with {'meta_title' :'Forget your password?',
  'meta_keywords' : 'forgot password',
  'meta_description' : "Forgot password page of #{site_name}"  
} %}
{% endblock %}

{% block content %}

<div class="container">
<div class="row">
<div class="col col-lg-12">
<div class="col col-lg-12" style="padding-top:20px;padding-bottom:40px;">
<h1>Forget your password?</h1>
<hr>
<p><i style="color:#AFD275" class="fa fa-check fa-fw"></i> To reset your password, please enter your registered email. A Password reset link will be sent to your email.</p>
<p><i style="color:#AFD275" class="fa  fa-check fa-fw"></i> Check the spelling of your email address</p>
<br /><br />
{%  if errorMessage != ''%}
 <div class="alert alert-danger">{{ errorMessage }}</div>
{% endif %}

{{ form_start(form, {attr: {novalidate: 'novalidate'}}) }}
<div class="row">
<div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-6 col-md-offset-3 col-lg-4 col-lg-offset-4" style="margin-left:auto;margin-right:auto;">
<div class="form-group">
Email Address*
 {{ form_widget(form.email,  {'attr': {'class': 'form-control input-lg'}}) }}
 <div class="form-error">
        {{ form_errors(form.email) }}
 </div>
</div>
<br />
 {{ form_widget(form.submit,  {'attr': {'class': 'btn btn-primary  btn-lg btn-block', 'value':'Submit'}}) }}
<br>
</div>
</div>
{{ form_end(form) }}
</div>


</div>
</div>
</div>
{% endblock %}