{% extends 'layout.html.twig' %}


{% block meta %}
  {% include('partials/meta.html.twig') with {'meta_title' :'Edit login info',
  'meta_keywords' : 'login edit',
  'meta_description' : "Edit login info page of #{site_name}"  
} %}
{% endblock %}

{% block content %}

<div class="container">
<div class="row">
<div class="col col-lg-12">
<div class="col col-lg-12" style="padding-top:20px;padding-bottom:40px;">
<h1>Change Login Email</h1>
<hr />

<div class="row">


<div class="col-xs-12 col-sm-12 col-md-12 col-lg-3" style="margin-bottom:20px;">
<div class="card">
  {% include('partials/accountnav.html.twig') %}
</div>
</div>


<div class="col-xs-12 col-sm-12 col-md-12 col-lg-9 ">
<div class="row">
<div class="col-lg-12">
<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
{% for message in app.flashes('login_error') %}
  <div class="alert alert-danger">
    {{ message }}
  </div>
{% endfor %}

{% if errorMessage != '' %}
 <div class="alert alert-danger">
    {{ errorMessage }}
  </div>

{% endif %}
{{ form_start(form2, {'name':'form2',  attr: {novalidate: 'novalidate'}}) }}
<div class="row">
<div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">

<div class="form-group">

<div class="form-group">
Login Email*
 {{ form_widget(form2.email,  {'attr': {'class': 'form-control input-lg', 'value' : app.user.getEmail() }}) }}
 <div class="form-error">
        {{ form_errors(form2.email) }}
 </div>
</div>
 {{ form_widget(form2.submit,  {'attr': {'class': 'btn btn-primary  btn-lg btn-block', 'value':'Submit'}}) }}
<br>
</div>
</div>
{{ form_end(form2) }}
</div>
</div>

     
