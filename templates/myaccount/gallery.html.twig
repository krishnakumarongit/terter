{% extends 'layout.html.twig' %}

{% block meta %}
  {% include('partials/meta.html.twig') with {'meta_title' :'Pets Gallery',
  'meta_keywords' : 'Pets Gallery',
  'meta_description' : "Add images to pets gallery page of #{site_name}"  
} %}
{% endblock %}

{% block content %}

<div class="container">
<div class="row">
<div class="col col-lg-12">
<div class="col col-lg-12" style="padding-top:20px;padding-bottom:40px;">
<h1>Pets Gallery - Add images</h1>
<hr />

<div class="row">


<div class="col-xs-12 col-sm-12 col-md-12 col-lg-3" style="margin-bottom:20px;">
<div class="card">
  {% include('partials/accountnav.html.twig') %}
</div>
</div>


<div class="col-xs-12 col-sm-12 col-md-12 col-lg-9 ">
<div class="row">
<div class="col-lg-12">
<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 ">
<div class="alert alert-info" role="alert">
You can only upload a GIF, JPG, or PNG image file. Size of the image must be less than 10mb.
</div>
{{ form_start(form, {'name' : 'form', attr: {novalidate: 'novalidate'}}) }}
<div class="row">
<div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 ">



<div class="form-group">
{% for message in app.flashes('password_success') %}
  <div class="alert alert-success">
    {{ message }}
  </div>
{% endfor %}
Pets Name*
 {{ form_widget(form.name,  {'attr': {'class': 'form-control input-lg'}}) }}
 <div class="form-error">
        {{ form_errors(form.name) }}
 </div>
</div>

<div class="form-group">
Pet Type*
 {{ form_widget(form.type,  {'attr': {'class': 'form-control input-lg'}}) }}
 <div class="form-error">
        {{ form_errors(form.type) }}
 </div>
</div>


<div class="form-group">
Pets Image*
 {{ form_widget(form.image,  {'attr': {'class': 'form-control input-lg'}}) }}
 <div class="form-error">
        {{ form_errors(form.image) }}
        {% if image_error != '' %}
        {{ image_error }}
        {% endif %}
 </div>

{% if image is defined %}
<br />
<img src="{{ asset('uploads/gallery/'~image~'') }}" height="50" width="50" >
{% endif %}

</div>

 {{ form_widget(form.submit,  {'attr': {'class': 'btn btn-primary  btn-lg btn-block', 'value':'Reset Password'}}) }}
<br>
</div>
</div>
{{ form_end(form) }}


<!-- -->

</div>
     
    </div>
        </div>

</div>


</div>
</div>
</div>
</div>
</div>


{% endblock %}