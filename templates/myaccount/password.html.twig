{% extends 'layout.html.twig' %}


{% block meta %}
  {% include('partials/meta.html.twig') with {'meta_title' :'Reset Password',
  'meta_keywords' : 'Reset password',
  'meta_description' : "Reset password page of #{site_name}"  
} %}
{% endblock %}

{% block content %}

<div class="container">
<div class="row">
<div class="col col-lg-12">
<div class="col col-lg-12" style="padding-top:20px;padding-bottom:40px;">
<h1>Change Password</h1>
<hr />

<div class="row">


<div class="col-xs-12 col-sm-12 col-md-12 col-lg-3" style="margin-bottom:20px;">
<div class="card">
  {% include('partials/accountnav.html.twig') %}
</div>
</div>


<div class="col-xs-12 col-sm-12 col-md-12 col-lg-9 ">
<div class="row">
<div class="col-lg-12">
<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 ">
{{ form_start(form1, {'name' : 'form1', attr: {novalidate: 'novalidate'}}) }}
<div class="row">
<div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 ">

<div class="form-group">
{% for message in app.flashes('password_success') %}
  <div class="alert alert-success">
    {{ message }}
  </div>
{% endfor %}
New Password*
 {{ form_widget(form1.password.first,  {'attr': {'class': 'form-control input-lg'}}) }}
 <div class="form-error">
        {{ form_errors(form1.password.first) }}
 </div>
</div>
<div class="form-group">
Confirm New Password*
 {{ form_widget(form1.password.second,  {'attr': {'class': 'form-control input-lg'}}) }}
 <div class="form-error">
        {{ form_errors(form1.password.second) }}
 </div>
</div>
 {{ form_widget(form1.submit,  {'attr': {'class': 'btn btn-primary  btn-lg btn-block', 'value':'Reset Password'}}) }}
<br>
</div>
</div>
{{ form_end(form1) }}


<!-- -->

</div>
     
    </div>
        </div>

</div>


</div>
</div>
</div>
</div>
</div>


{% endblock %}