{% extends 'layout.html.twig' %}


{% block meta %}
  {% include('partials/meta.html.twig') with {'meta_title' :'Resend activation link',
  'meta_keywords' : 'Resend activation link',
  'meta_description' : "Email verification request page of #{site_name}"  
} %}
{% endblock %}

{% block content %}

<div class="container">
<div class="row">
<div class="col col-lg-12">
<div class="col col-lg-12" style="padding-top:20px;padding-bottom:40px;">
<h1>Resend activation link</h1>
<hr />

<div class="row">


<div class="col-xs-12 col-sm-12 col-md-12 col-lg-3" style="margin-bottom:20px;">
<div class="card">
  {% include('partials/accountnav.html.twig') %}
</div>
</div>


<div class="col-xs-12 col-sm-12 col-md-12 col-lg-9 ">
<div class="row">
<div class="col-lg-12">
<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">

{% if successMessage == 1 %}
<div class="alert alert-warning" role="alert">
We have sent an email with a confirmation link to your email address [<span style="color:blue;">{{app.user.getEmail()}}</span>]. Please click the confirmation link in the email to complete the registration process.
In order to use all features of {{site_name}}, the email address of your account needs to be verified.

<p>
<h4>Didn't get the email?</h4>
If you do not receive the activation email within 5 minutes, please check your Spam, Junk E-mail folder.
</p>

</div>

{% endif %}

{% for message in app.flashes('login_error') %}
  <div class="alert alert-danger">
    {{ message }}
  </div>
{% endfor %}

{% if errorMessage != '' %}
 <div class="alert alert-danger">
    {{ errorMessage }}
  </div>

{% endif %}
{{ form_start(form, {'name':'form',  attr: {novalidate: 'novalidate'}}) }}
<div class="row">
<div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">

<div class="form-group">

<div class="form-group">
 {{ form_widget(form.check) }}
</div>

<button class="btn btn-primary my-4" type="submit"><i class="fa fa-paper-plane fa-fw"></i>&nbsp;Resend activation link</button>
<br>
</div>
</div>
{{ form_end(form) }}
</div>
</div>

     
    </div>
        </div>

</div>


</div>
</div>
</div>
</div>
</div>


{% endblock %}